<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/text_view_progress"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="60sp"
            android:textColor="@android:color/holo_purple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.41"/>
    <SeekBar
            android:layout_width="243dp"
            android:layout_height="200dp"
            android:max="10"
            android:outlineSpotShadowColor="@android:color/holo_purple"
            android:outlineAmbientShadowColor="@android:color/holo_purple"
            android:id="@+id/seekBar"
            app:layout_constraintTop_toBottomOf="@+id/text_view_progress" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="Reset"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:textColor="@android:color/holo_purple"
            android:shadowColor="@android:color/black"
            android:id="@+id/button_reset" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBar"/>

</android.support.constraint.ConstraintLayout>